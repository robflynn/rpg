{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "esnext",
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ],
    "removeComments": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": false,
    "jsx": "react",
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@data/*": [
        "data/*"
      ],
      "@lib/*": [
        "src/lib/*"
      ],
      "@patd/*": [
        "src/lib/patd/*"
      ],
      "@editor/*": [
        "src/lib/patd/editor/*"
      ],
      "@engine/*": [
        "src/lib/engine/*"
      ]
    }
  },

  "files": [
    "./vue-shim.d.ts"
  ],

  "include": [
    "**/*.ts",
    "**/*.vue"
  ],

  "exclude": [
    "node_modules"
  ]

}
